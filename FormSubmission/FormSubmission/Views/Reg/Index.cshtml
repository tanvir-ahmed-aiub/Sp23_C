<h2>Register</h2>
@{ 
    bool CheckHobby(string hobby) {
        if (Model != null && Model.Hobbies != null) {
            foreach (var item in Model.Hobbies) {
                if (item.Equals(hobby)) return true;
            }
        }
        return false;
    }
}

<p >
    @Html.ValidationSummary()
</p>
<form method="post">
    Name: <input type="text" name="Name" value="@(Model == null ? "" : Model.Name)" placeholder="Name"  class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Name")</span><br />
    Id: <input type="text"  name="Id" placeholder="Id" class="form-control" />
        <span class="text-danger">@Html.ValidationMessage("Id")</span><br />
    Gender: <input type="radio" name="Gender" value="Male" /> Male<input type="radio" name="Gender" value="Female" /> Female
    <br />Profession:<br />
    <select class="form-control" name="Profession">
        <option selected disabled>Select</option>
        <option class="form-control">Student</option>
        <option class="form-control">Teacher</option>
    </select>
    Hobbies:
    <input type="checkbox" checked=@(CheckHobby("Games")) value="Games" name="Hobbies[]" /> Games
    <input type="checkbox" checked=@(CheckHobby("Sports")) value="Sports" name="Hobbies[]" /> Sports
    <input type="checkbox" checked=@(CheckHobby("Travelling")) value="Travelling" name="Hobbies[]" /> Travelling
    <input type="checkbox" checked=@(CheckHobby("Music"))  value="Music" name="Hobbies[]" /> Music
    <br />
    Date of Birth: <input type="date" value="@(Model == null? "":Model.Dob.Date.ToString("yyyy-MM-dd"))"  name="Dob" /> <br />
    <input type="submit" value="Register" class="btn btn-success" />
</form>
